<resources xmlns:tools="http://schemas.android.com/tools"  xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.ThingsToDo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="appBackground">@color/light_blue_grey</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="titleTextColor">#2B2B2B</item>
        <item name="descriptionTextColor">#4A4A4A</item>
        <item name="dateTextColor">#505050</item>
        <item name="fabIconColor">@color/white</item>
        <item name="iconColor">@color/accent</item>
        <item name="appBarIcon_Text">@color/white</item>

    </style>
</resources>