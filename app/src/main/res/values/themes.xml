<resources xmlns:tools="http://schemas.android.com/tools"  xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.ThingsToDo" parent="Theme.MaterialComponents.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_700</item>
        <item name="colorOnPrimary">@color/black_50</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_500</item>
        <item name="colorOnSecondary">@color/black_50</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black_100</item>
        <item name="colorOnBackground">@color/black_800</item>
        <item name="colorSurface">@color/black_50</item>
        <item name="colorOnSurface">@color/black_800</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="Theme.ThingsToDo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_50</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.ThingsToDo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="CalendarDatePickerDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:textColorPrimary">?attr/colorOnBackground</item>
        <item name="android:textColorSecondary">?attr/colorSecondary</item>
    </style>

    <style name="CalendarTimePickerDialogStyle" parent="@style/ThemeOverlay.MaterialComponents.TimePicker">
        <item name="android:textColorPrimary">@color/black_500</item>
        <item name="android:textColorSecondary">@color/black_400</item>
        <item name="android:textColorHint">?attr/colorOnBackground</item>
        <item name="android:textColor">@color/black_400</item>
    </style>
</resources>