<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThingsToDo" parent="Theme.MaterialComponents.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_dark</item>
        <item name="colorOnPrimary">@color/dark_primary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/dark_secondary_text</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <!-- Customize your theme here. -->
        <item name="appBackground">@color/dark_grey</item>
        <item name="cardBackgroundColor">@color/dark_grey_purple</item>
        <item name="titleTextColor">@color/dark_primary_text</item>
        <item name="descriptionTextColor">@color/dark_primary_text</item>
        <item name="dateTextColor">@color/dark_secondary_text</item>
        <item name="fabBackgroundColor">@color/dark_accent</item>
        <item name="fabIconColor">@color/black</item>
        <item name="iconColor">@color/dark_accent</item>
        <item name="appBarIcon_Text">@color/black</item>

    </style>
</resources>