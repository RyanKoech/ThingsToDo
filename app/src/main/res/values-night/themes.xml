<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ThingsToDo" parent="Theme.MaterialComponents.Light">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/violet_300</item>
        <item name="colorOnPrimary">@color/black_800</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorOnSecondary">@color/black_800</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimarySurface</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/isLightTheme</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/black_850</item>
        <item name="colorOnBackground">@color/black_50</item>
        <item name="colorSurface">@color/black_800</item>
        <item name="colorOnSurface">@color/black_50</item>
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="materialTimePickerTheme">@style/CalendarTimePickerDialogStyle</item>
    </style>

    <style name="Theme.ThingsToDo.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/black_850</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_splash</item>
        <item name="postSplashScreenTheme">@style/Theme.ThingsToDo</item>
    </style>

</resources>